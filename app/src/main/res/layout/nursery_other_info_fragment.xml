<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_above="@+id/nav"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_margin="6dp"
            android:paddingRight="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity of seeds purchased"
                android:textSize="@dimen/textsize"
                android:paddingTop="20dp"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/qpurchased"
                android:backgroundTint="#008000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:layout_below="@+id/text1"
                android:padding="@dimen/view_padding"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/add_edit_textsize"/>
            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp">
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="Select date of seeds sown"
                    android:id="@+id/date_sown"
                    android:focusable="false"
                    android:backgroundTint="#008000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:id="@+id/btn_date"
                    android:background="@drawable/edittext_radius"
                    android:backgroundTint="#008000"
                    android:layout_alignBottom="@+id/date_sown"
                    android:layout_toRightOf="@+id/date_sown"
                    android:layout_toEndOf="@+id/date_sown" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of seeds germinated"
                android:textSize="@dimen/textsize"
                android:paddingTop="20dp"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/germinated"
                android:backgroundTint="#008000"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:padding="@dimen/view_padding"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/add_edit_textsize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of seedlings survived"
                android:textSize="@dimen/textsize"
                android:paddingTop="20dp"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/survived"
                android:backgroundTint="#008000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_padding"
                android:textSize="@dimen/add_edit_textsize">
            </EditText>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The age of seedlings before field planting (Months)"
                android:textSize="@dimen/textsize"
                android:paddingTop="20dp"
                android:textStyle="italic|bold"/>
            <EditText
                android:id="@+id/seedlings_age"
                android:backgroundTint="#008000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_padding"
                android:textSize="@dimen/add_edit_textsize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The price per seedling(unit depends on count currency)"
                android:textSize="@dimen/textsize"
                android:paddingTop="20dp"
                android:textStyle="italic|bold"/>
            <EditText
                android:id="@+id/price"
                android:backgroundTint="#008000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/view_padding"
                android:textSize="@dimen/add_edit_textsize"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@id/nav">

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="jumpBackPropagation"
            android:layout_weight="1"
            android:text="PREV"/>

        <Button
            android:id="@+id/fi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="jumpToEnd"
            android:layout_weight="1"
            android:text="NEXT"/>

    </LinearLayout>
</RelativeLayout>