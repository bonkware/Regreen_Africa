<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_above="@+id/nav"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_margin="6dp"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tree measurement"
                android:layout_gravity="start"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cohort ID:"
                android:visibility="gone"
                android:textSize="@dimen/textsize"
                android:padding="10dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/cid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:visibility="gone"
                android:padding="@dimen/view_padding"
                android:textSize="@dimen/add_edit_textsize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select one tree from the cohort and take the measurements"
                android:textSize="@dimen/textsize"
                android:padding="10dp"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height(m)"
                android:textSize="@dimen/textsize"
                android:textStyle="italic">
            </TextView>
            <RadioGroup
                android:id="@+id/height"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">
                <RadioButton
                    android:id="@+id/less15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="less than 1.5m"
                    android:textSize="@dimen/add_edit_textsize" />
                <RadioButton
                    android:id="@+id/less3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5m to 3m"
                    android:textSize="@dimen/add_edit_textsize" />
                <RadioButton
                    android:id="@+id/more3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="more than 3m"
                    android:textSize="@dimen/add_edit_textsize" />
        </RadioGroup>

            <Button
                android:id="@+id/d_rcd1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="RCD(cm)"/>
            <Button
                android:id="@+id/d_rcd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="DBH(cm)"/>
            <!--<LinearLayout
                android:id="@+id/height_"
                android:visibility="visible"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height(m)"
                    android:textSize="@dimen/textsize"
                    android:padding="10dp"
                    android:textStyle="italic"/>
                <EditText
                    android:id="@+id/height"
                    android:backgroundTint="#008000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_padding"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/add_edit_textsize">
                </EditText>
            </LinearLayout>-->
            <!--<LinearLayout
                android:id="@+id/rcd_"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Root collar diameter [cm]"
                    android:textSize="@dimen/textsize"
                    android:padding="10dp"
                    android:textStyle="italic"/>
                <EditText
                    android:id="@+id/RCD"
                    android:backgroundTint="#008000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_padding"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/add_edit_textsize">
                </EditText>
            </LinearLayout>-->
            <LinearLayout
                android:id="@+id/dbh_rcd"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <EditText
                    android:id="@+id/db_rc"
                    android:backgroundTint="#008000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/view_padding"
                    android:inputType="numberDecimal"
                    android:textSize="@dimen/add_edit_textsize">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/nav">

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="visible"
            android:enabled="false"
            android:text="PREV"/>

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:onClick="jumpToPhoto"
            android:drawableRight="@drawable/noun_next"
            android:text="NEXT"/>

    </LinearLayout>
</RelativeLayout>