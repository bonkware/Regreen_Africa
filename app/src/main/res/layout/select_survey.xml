<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/livs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Survey and fill the forms"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textSize="18sp"
            android:padding="10dp">
        </TextView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*" >
            <TableRow
                android:id="@+id/treeplanting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <CheckBox
                    android:id="@+id/button_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:button="@drawable/ic_icon_treeplanting"
                    />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tree planting"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="15sp">
                </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/fmnr_nursery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <CheckBox
                    android:id="@+id/button_fmnr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:button="@drawable/ic_icon_fmnr"
                    />
                <CheckBox
                    android:id="@+id/button_nursery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:button="@drawable/ic_icon_nursery"
                    />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="FMNR"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Nursery"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="15sp"/>
            </TableRow>
            <TableRow
                android:id="@+id/nursery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dp">
                <CheckBox
                    android:id="@+id/button_trainings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:button="@drawable/ic_icon_training"
                    />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="0dp" android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Training"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textSize="15sp">
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>